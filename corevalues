<body>
  <div class="container">
    <div class="toolbar">
      <div class="left"><button class="btn ghost" id="backTop">Back</button></div>
      <div class="right"><button class="btn black" id="nextTop">Next</button></div>
    </div>

    <div id="page"></div>

    <div class="footer-actions">
      <div class="toolbar">
        <div class="left"><button class="btn ghost" id="backBottom">Back</button></div>
        <div class="right"><button class="btn black" id="nextBottom">Next</button></div>
      </div>
    </div>
  </div>

<script>
// === FULL VALUES (103) ===
const VALUES = [
